<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_menu">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="360dp"
            android:layout_height="660dp"
            app:columnCount="4"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:text="Cuadrado"
                android:layout_width="125dp"
                android:layout_height="71dp" app:layout_row="3" app:layout_column="0"
                android:id="@+id/btnCuadrado" android:width="102dp"
                android:textSize="11dp"
                android:background="@drawable/custom_button"/>
        <TextView
                android:text="Figuras 2D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_row="2" app:layout_column="0"
                app:layout_columnSpan="3"
                android:id="@+id/tvFig2d" android:textSize="34sp" android:textAlignment="center"
                android:textStyle="bold"/>
        <Button
                android:text="Cubo"
                android:layout_width="123dp"
                android:layout_height="71dp" app:layout_row="1" app:layout_column="0"
                android:id="@+id/btnCubo" android:width="102dp"
                android:background="@drawable/custom_button"/>
        <Button
                android:text="Esfera"
                android:layout_width="121dp"
                android:layout_height="74dp" app:layout_row="1" app:layout_column="1"
                android:id="@+id/btnEsfera" android:width="102dp"
                android:background="@drawable/custom_button"/>
        <Button
                android:text="Circulo"
                android:layout_width="122dp"
                android:layout_height="74dp" app:layout_row="3" app:layout_column="1"
                android:id="@+id/btnCirculo" android:width="102dp"
                android:background="@drawable/custom_button"/>
        <Button
                android:text="Triangulo"
                android:layout_width="113dp"
                android:layout_height="74dp" app:layout_row="3" app:layout_column="2"
                android:id="@+id/btnTriangulo" android:width="102dp" android:textSize="11dp"
                android:background="@drawable/custom_button"/>
        <TextView
                android:text="Figuras 3D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_row="0" app:layout_column="0"
                app:layout_columnSpan="4"
                android:id="@+id/tvFig3d" android:textSize="34sp" android:textAlignment="center"
                android:textStyle="bold"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>